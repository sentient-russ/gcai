@model gcai.Models.PostModel
@{
    ViewData["Title"] = "Edit Post";
}
<div class="edit-flexbox-container">
    
    <div class="row dialog-box-container-edit">
        <center><h1 class="edit-heading">@ViewData["Title"]</h1></center>
        <form asp-action="EditPost" class="edit-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="idPostModel" />
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="ScreenName" />
            <input type="hidden" asp-for="PostType" />
            <input type="hidden" asp-for="PostDate" />
            @{
                if (Model.PostType == "Truth")
                {
                    <div class="form-group">
                        <label asp-for="Truth" class="control-label" style="margin-left: 9px;font-weight:600;"></label>
                        <textarea asp-for="Truth" class="form-control" style="background-color: #e5e5e5;" rows="10"></textarea>
                        <span asp-validation-for="Truth" class="text-danger"></span>
                    </div>
                }
                else if (Model.PostType == "Humor")
                {
                    <div class="form-group">
                        <label asp-for="Humor" class="control-label" style="margin-left: 9px;font-weight:600;"></label>
                        <textarea asp-for="Humor" class="form-control" style="background-color: #e5e5e5;" rows="10"></textarea>
                        <span asp-validation-for="Humor" class="text-danger"></span>
                    </div>
                }
                else if(Model.PostType == "Problem/Solution")
                {
                    <div class="form-group">
                        <label asp-for="Problem" class="control-label" style="margin-left: 9px;font-weight:600;"></label>
                        <textarea asp-for="Problem" class="form-control" style="background-color: #e5e5e5;" rows="10"></textarea>
                        <span asp-validation-for="Problem" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Solution" class="control-label" style="margin-left: 9px;font-weight:600;"></label>
                        <textarea asp-for="Solution" class="form-control" style="background-color: #e5e5e5;" rows="10"></textarea>
                        <span asp-validation-for="Solution" class="text-danger"></span>
                    </div>
                }
            }

        <center>
        <div class="form-group">
            <input type="submit" value="Save" class="edit-button" />
        </div>
        <div style="margin:10px;">
                    <a asp-action="Index" >Back to task list</a>
        </div>
        </center>
        <br />
        </form>
        </code>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
